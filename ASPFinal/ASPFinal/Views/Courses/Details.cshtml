@model ASPFinal.ViewModels.vmCourseDetail
@{
    ViewBag.Title = "Index";
}


<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/Uploads/@Model.Courses.Image" width="800" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Courses.TextTitle</h2>
                        <p>@Model.Courses.Text</p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <p>@Html.Raw(@Model.Courses.DetailText)</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.Features.Starts</span></li>
                                <li>duration <span>@Model.Features.Duration</span></li>
                                <li>class duration <span>@Model.Features.ClassDuration</span></li>
                                <li>skill level <span>@Model.Features.SkillLevel</span></li>
                                <li>language <span>@Model.Features.Language</span></li>
                                <li>students <span>@Model.Features.Students</span></li>
                                <li>assesments <span>@Model.Features.Assetsments</span></li>
                            </ul>
                            <h3 class="red">course fee @Model.Features.CourseFee</h3>
                        </div>
                    </div>

                    @{
                        Html.RenderPartial("~/Views/Shared/MessagePartial.cshtml", Model.Messages);
                    }

                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>


                    @{
                        Html.RenderPartial("~/Views/Shared/RightPartial.cshtml", Model.Categories);
                    }

                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="@Url.Action("Index","BlogDetails")" id="blog"><img src="~/Public/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    @{
                        Html.RenderPartial("~/Views/Shared/EventPartial.cshtml", Model.Events);
                    }


                    @{
                        Html.RenderPartial("~/Views/Shared/TagsPartial.cshtml", Model.Tags);
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
