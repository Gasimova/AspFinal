@model ASPFinal.ViewModels.vmBlofLeft
@{
    ViewBag.Title = "Index";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>blog details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/Uploads/@Model.Blog.Image" width="800" alt="blog-details">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.Blog.Title </h2>
                        <h6>By Alex  /  June 20, 2017  /  <i class="fa fa-comments-o"></i> 4</h6>
                        <p>@Html.Raw(Model.Blog.Text)</p>
                    </div>

                    @{
                        Html.RenderPartial("~/Views/Shared/MessagePartial.cshtml", Model.Messages);
                    }
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-47">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>

                    @{
                        Html.RenderPartial("~/Views/Shared/RightPartial.cshtml", Model.Categories);
                    }

                    <div class="single-blog-widget mb-47">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/Public/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>

                    @{
                        Html.RenderPartial("~/Views/Shared/EventPartial.cshtml", Model.Events);
                    }


                    @{
                        Html.RenderPartial("~/Views/Shared/TagsPartial.cshtml", Model.Tags);
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->
