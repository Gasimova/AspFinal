@model ASPFinal.Models.Users
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form class="user" method="post">
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Name)
                                    @Html.TextBoxFor(l => l.Name, null, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(l => l.Name, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Username)
                                    @Html.TextBoxFor(l => l.Username, null, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(l => l.Username, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Password)
                                    @Html.TextBoxFor(l => l.Password, null, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(l => l.Password, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Phone)
                                    @Html.TextBoxFor(l => l.Phone, null, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(l => l.Phone, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(l => l.Email)
                                    @Html.TextBoxFor(l => l.Email, null, new { @class = "form-control form-control-user" })
                                    @Html.ValidationMessageFor(l => l.Email, null, new { @class = "text-danger" })
                                </div>

                                <button class="btn btn-primary btn-user btn-block">Sign Up</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->
