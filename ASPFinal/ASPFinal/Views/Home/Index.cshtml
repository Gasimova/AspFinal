@model ASPFinal.ViewModels.vmHome
@{
    ViewBag.Title = "Index";
}

<!-- Background Area Start -->
<section id="slider-container" class="slider-area two">
    <div class="slider-owl owl-theme owl-carousel">
        @foreach (var item in Model.MainSliders)
        {
            <!-- Start Slingle Slide -->
            <div class="single-slide item" style="background-image: url(/Uploads/@item.Image)">
                <!-- Start Slider Content -->
                <div class="slider-content-area">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-10 col-md-offset-1">
                                <div class="slide-content-wrapper">
                                    <div class="slide-content text-center">
                                        <h2>@item.Title</h2>
                                        <p>@item.Subtitle  </p>
                                        <a class="default-btn" href="about.html">Learn more</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Start Slider Content -->
            </div>
            <!-- End Slingle Slide -->
        }
    </div>
</section>
<!-- Background Area End -->
<!-- Service Start -->
<div class="service-area two pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="single-service">
                    <h3><a href="teacher.html">PROFESSIONAL TEACHER</a></h3>
                    <p>I must explain to you how all this mistaken denouncing pleure and praising pain </p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="single-service">
                    <h3><a href="teacher.html">PROFESSIONAL TEACHER</a></h3>
                    <p>I must explain to you how all this mistaken denouncing pleure and praising pain </p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="single-service">
                    <h3><a href="teacher.html">PROFESSIONAL TEACHER</a></h3>
                    <p>I must explain to you how all this mistaken denouncing pleure and praising pain </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Service End -->
<!-- About Start -->
<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Model.About.ContentTitle</h2>
                    <p>@Model.About.Text</p>
                    <p class="hidden-sm">I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system</p>
                    <a class="default-btn" href="@Url.Action("Index","About")">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/Uploads/@Model.About.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Courses Area Start -->
<div class="courses-area two pt-150 pb-150 text-center">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/Public/img/icon/section1.png" alt="section-title">
                    <h2>COURSES WE OFFER</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Courses.Take(3))
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-course">
                        <div class="course-img">
                            <a href="@Url.Action("Index","CoursesDetails")">
                                <img src="~/Uploads/@item.Image" alt="course">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="@Url.Action("Index","CoursesDetails")">@item.TextTitle</a></h3>
                            <p>@item.Text</p>
                            <a class="default-btn" href="@Url.Action("Index","CoursesDetails")">read more</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Courses Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="@Model.About.Video">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (var item in Model.Boards)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@item.Date</h4>
                                <p>@item.Text</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Event Area Start -->
<div class="event-area two text-center pt-100 pb-145">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title">
                    <img src="~/Public/img/icon/section.png" alt="section-title">
                    <h2>UPCOMMING EVENTS</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Events.Take(2))
            {
            <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="single-event mb-35">
                        <div class="event-img">
                                <a href="@Url.Action("Index","EventsDetails")"><img src="~/Uploads/@item.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Date</h3>
                            <h4><a href="@Url.Action("Index","EventsDetails")">@item.Title</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@item.Time</li>
                                <li><i class="fa fa-map-marker"></i>@item.Venue</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" href="@Url.Action("Index","EventsDetails")">join now</a>
                            </div>
                        </div>
                    </div>
                    <div class="single-event hidden-sm hidden-xs">
                        <div class="event-img">
                            <a href="@Url.Action("Index","EventsDetails")"><img src="~/Uploads/@item.Image" alt="event"></a>
                        </div>
                        <div class="event-content text-left">
                            <h3>@item.Date</h3>
                            <h4><a href="@Url.Action("Index","EventsDetails")">learning english history</a></h4>
                            <ul>
                                <li><i class="fa fa-clock-o"></i>@item.Time</li>
                                <li><i class="fa fa-map-marker"></i>@item.Venue</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" href="@Url.Action("Index","EventsDetails")">join now</a>
                            </div>
                        </div>
                    </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- Event Area End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        <div class="testimonial-info">
                            @foreach (var item in Model.Testimonials)
                            {
                                <div class="testimonial-img">
                                    <img src="~/Uploads/@item.Image" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@item.Text</p>
                                    <h4>@item.Person</h4>
                                    <h5>@item.Position</h5>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Blog Area Start -->
<div class="blog-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/Public/img/icon/section.png" alt="section-title">
                    <h2>LATEST FROM BLOG</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Blogs.Take(3))
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a href="@Url.Action("Index","BlogDetails")"><img src="~/Uploads/@item.Image" alt="blog"></a>
                            <div class="blog-hover">
                                <a href="@Url.Action("Index","BlogDetails")"><i class="fa fa-link"></i></a>
                            </div>
                        </div>
                        <div class="blog-content">
                            <div class="blog-top">
                                <p>By Alex  /  @item.CreatedDate.ToShortDateString()  /  <i class="fa fa-comments-o"></i> @item.ReadCount</p>
                            </div>
                            <div class="blog-bottom">
                                <h2><a href="@Url.Action("Index","BlogDetails")">@item.Title</a></h2>
                                <a href="@Url.Action("Index","BlogDetails")">read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Blog Area End -->
